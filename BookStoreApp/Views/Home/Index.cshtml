@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<Book>

<h1>Список товаров</h1>

<table class="table">
    <tr>
        <th>
            <a asp-action="Index" asp-route-sortOrder="@ViewBag.NameSort">
                Название
            </a>
        </th>
        <th>
            <a asp-action="Index" asp-route-sortOrder="@ViewBag.AgeSort">
                Год издания
            </a>
        </th>
        <th>
            <a asp-action="Index" asp-route-sortOrder="@ViewBag.AuthorSort">
                Автор
            </a>
        </th>
        <th></th>
    </tr>
    @foreach (Book u in Model)
    {
        @if (u.ExistInShopCart == false)
        {
            <tr>
                <td>@u.Name</td>
                <td>@u.Age</td>
                <td>@u.Author.Name</td>
                <td>
                    <div class="w-50 btn-group" role="group">
                        <a asp-route-Id="@u.Id" asp-action="Buy" class="btn btn-success">Купить</a>
                    </div>
                </td>
            </tr>
        }

    }
</table>
